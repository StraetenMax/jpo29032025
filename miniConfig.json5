{
  // Configuration pour la minification HTML
  miniConfig: {
    collapseWhitespace: true, // Supprimer les espaces blancs
    removeComments: false, // Garder les commentaires conditionnels
    removeEmptyAttributes: true, // Supprimer les attributs vides
    minifyCSS: true, // Minifier le CSS
    conservativeCollapse: false, // Minifier plus agressivement
    preserveLineBreaks: false, // Supprimer les sauts de ligne
    processConditionalComments: true, // Traiter les commentaires conditionnels
    minifyJS: true, // Minifier le JavaScript
    caseSensitive: true, // Important pour les éléments MSO
    keepClosingSlash: true, // Important pour la compatibilité email
    html5: false // Important pour la compatibilité email
  }
}
